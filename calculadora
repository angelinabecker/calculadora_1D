        border-bottom: 1px solid #ccc;
    }
    .keys {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
    }
    .key {
        width: 100%;
        height: 60px;
        font-size: 20px;
        text-align: center;
        border: 1px solid #ccc;
        border-right: none;
        border-bottom: none;
        background-color: #f9f9f9;
        cursor: pointer;
        transition: background-color 0.3s;
    }
    .key.operator {
        background-color: #f3d29e;
